<!DOCTYPE html>
<html>
  <head>
    <title>LastCall</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
         window.mastheadUrl = "<%= image_url('masthead-img-main.png') %>";
         window.lastcalllogo = "<%= image_url('lastcall-logo.png') %>";
         window.searchIcon = "<%= image_url('Search-icon.png') %>";
         
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
